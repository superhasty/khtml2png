#MIN_CONFIG(3.0.0)

AM_INIT_AUTOMAKE($APPNAMELC$, $VERSION$)
AC_C_BIGENDIAN
AC_CHECK_KDEMAXPATHLEN

prefix=`kde-config --prefix`

for lib in libkabc libkdecore libkdeprint libkdeui libkio libkhtml libkio libkparts libkspell
do
	echo -n "checking for $lib "
	libFile="$prefix/lib/$lib.la"
	
	if test -f $libFile
	then	
		echo "yes"
	else
		echo "no. Could not find $lib anywhere ($libFile)"
		exit 1
	fi
done

